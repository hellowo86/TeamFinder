<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_button"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/default_profile"/>

            <TextView
                android:id="@+id/nameText"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/primaryText"
                style="@style/NormalText"
                android:textSize="14dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/contentsText"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/primaryText"
            android:textSize="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gameIconImg"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:id="@+id/gameText"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:text="name"
                style="@style/SubText"
                android:textColor="@color/secondaryText"/>

            <ImageView
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_query_builder_black_48dp"
                android:tint="@color/iconTint"/>

            <TextView
                android:id="@+id/activeTimeText"
                style="@style/SubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:gravity="center_vertical"
                android:text="name"
                android:textColor="@color/secondaryText" />

            <ImageView
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_comment_black_48dp"
                android:tint="@color/iconTint"/>

            <TextView
                android:id="@+id/commentCountText"
                style="@style/SubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:gravity="center_vertical"
                android:text="name"
                android:textColor="@color/secondaryText" />


            <ImageView
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_people_black_48dp"
                android:tint="@color/iconTint"/>

            <TextView
                android:id="@+id/memberCountText"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:text="name"
                style="@style/SubText"
                android:textColor="@color/secondaryText"/>

        </LinearLayout>

        <View
            android:background="@color/disableText"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </LinearLayout>

</layout>