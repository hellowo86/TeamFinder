<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLy"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_menu_bar_height"
            android:background="@color/background"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_circle_button"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back_black_48dp"
                android:tint="@color/iconTint" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TitleText"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="50dp"/>

            <ImageButton
                android:id="@+id/searchBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="50dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/ripple_circle_button"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search_black_48dp"
                android:tint="@color/iconTint" />

            <ImageButton
                android:id="@+id/menuBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/ripple_circle_button"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_black_48dp"
                android:tint="@color/iconTint" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/top_menu_bar_height">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_menu_bar_height"
                android:background="@color/white"
                android:elevation="2dp">

                <EditText
                    android:id="@+id/messageInput"
                    style="@style/NormalEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:minHeight="@dimen/top_menu_bar_height"
                    android:paddingStart="@dimen/normal_margin"
                    android:paddingEnd="@dimen/normal_margin"
                    android:layout_marginEnd="70dp"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_message"/>

                <TextView
                    android:id="@+id/sendBtn"
                    style="@style/BasicButton"
                    android:layout_margin="5dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:text="@string/send"/>

            </FrameLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/floatingDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="@color/blackAlpha"
            app:cardElevation="1dp"
            app:cardCornerRadius="@dimen/small_margin"
            app:contentPadding="@dimen/thin_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/floatingDateText"
                style="@style/SubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:textColor="@color/primaryWhiteText"
                android:textSize="@dimen/normal_text_size" />

        </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/chatMenuLy"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/colorPrimaryDark">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/accountPhotoImg"
                        android:src="@drawable/ic_account_circle_black_48dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <TextView
                        android:id="@+id/accountNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TitleText"
                        android:textColor="@color/primaryWhiteText"
                        android:layout_marginTop="@dimen/big_margin"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_bookmark_border_black_24dp"
                            android:tint="@color/primaryWhiteText"/>

                        <TextView
                            android:id="@+id/accountClanText"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SubText"
                            android:textColor="@color/primaryWhiteText"
                            android:text="@string/no_clan"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/searchTeamMenuBtn"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_button"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_account_circle_black_48dp"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:tint="@color/primaryWhiteText"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        style="@style/NormalText"
                        android:text="@string/search_team"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:textColor="@color/primaryWhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_button"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_settings_black_48dp"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:tint="@color/primaryWhiteText"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        style="@style/NormalText"
                        android:text="@string/settings"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:textColor="@color/primaryWhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/signOutBtn"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_button"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_power_settings_new_black_24dp"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:tint="@color/primaryWhiteText"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        style="@style/NormalText"
                        android:text="@string/sign_out"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:textColor="@color/primaryWhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>