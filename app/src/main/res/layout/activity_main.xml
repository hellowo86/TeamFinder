<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLy"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="TITLE"
                            android:id="@+id/mainMonthText"
                            android:textColor="@color/primaryText"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="21dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="subtitle"
                            android:id="@+id/mainYearText"
                            android:textColor="@color/secondaryText"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="11dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/menuBtn"
                    android:background="@drawable/ripple_circle_button"
                    android:src="@drawable/ic_menu_black_48dp"
                    android:tint="@color/grey"
                    android:scaleType="centerInside"
                    android:padding="11dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/myAccountBtn"
                    android:layout_gravity="right"
                    android:tint="@color/grey"
                    android:background="@drawable/ripple_circle_button"
                    android:src="@drawable/ic_account_circle_black_48dp"
                    android:scaleType="centerInside"
                    android:padding="11dp" />

            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/myAccountDrawerLy"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/accountPhotoImg"
                android:src="@drawable/ic_account_circle_black_48dp"
                android:layout_margin="50dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDrawerLy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/white"
            android:orientation="vertical">

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

</layout>
