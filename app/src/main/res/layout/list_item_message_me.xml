<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/dateDivider"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_size"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@color/disableText"/>

        <TextView
            android:id="@+id/dateDividerText"
            style="@style/SubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="date"
            android:textColor="@color/disableText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_size"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/normal_margin"
            android:background="@color/disableText"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/topMargin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_margin" />

    <FrameLayout
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/nameLy"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/thin_margin"
                android:layout_gravity="end">

                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/timeText"
                    style="@style/SubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textColor="@color/disableText" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/thin_margin"
                android:layout_marginEnd="@dimen/thin_margin">

                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/uncheckText"
                    style="@style/SubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/thin_margin"
                    android:text="1"
                    android:textColor="@color/disableText" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/normal_margin"
                    app:cardBackgroundColor="@color/colorPrimary">

                    <TextView
                        android:id="@+id/messageText"
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="message"
                        android:textColor="@color/primaryWhiteText"
                        android:layout_margin="@dimen/small_margin"
                        android:textSize="@dimen/normal_text_size" />

                    <ImageView
                        android:id="@+id/photoImg"
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>