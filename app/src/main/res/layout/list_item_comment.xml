<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_button"
        android:orientation="vertical"
        android:paddingLeft="@dimen/extra_margin"
        android:paddingRight="@dimen/extra_margin">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_line_size"
            android:background="@color/backgroundDark"/>

        <LinearLayout
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/default_profile"/>

            <TextView
                android:id="@+id/meesageText"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/secondaryText"
                style="@style/NormalText"
                android:textSize="@dimen/normal_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_query_builder_black_48dp"
                android:tint="@color/iconTint"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/activeTimeText"
                style="@style/SubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thin_margin"
                android:text="name"
                android:textColor="@color/disableText" />

        </LinearLayout>

    </LinearLayout>

</layout>