<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:paddingTop="@dimen/top_menu_bar_height"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <FrameLayout
            android:background="@color/background"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_menu_bar_height">

            <TextView
                android:id="@+id/mainTopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/top_menu_bar_height"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/primaryText"
                android:textSize="21dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="6dp"
                android:id="@+id/backBtn"
                android:background="@drawable/ripple_circle_button"
                android:src="@drawable/ic_clear_black_48dp"
                android:tint="@color/colorPrimaryDark"
                android:scaleType="centerInside"
                android:padding="11dp" />

        </FrameLayout>

    </FrameLayout>

</layout>
