<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </android.support.v4.view.ViewPager>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_menu_bar_height"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/mainTopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="@string/team_info"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size" />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_circle_button"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back_black_48dp"
                android:tint="@color/white" />

        </FrameLayout>

        <LinearLayout
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_menu_bar_height"
            android:layout_marginTop="@dimen/top_menu_bar_height">

            <TextView
                android:id="@+id/teamInfoTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_button"
                android:textColor="@color/primaryWhiteText"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/team_info"
                android:gravity="center">

            </TextView>

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@color/disableWhiteText" />

            <TextView
                android:id="@+id/membersTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_button"
                android:textColor="@color/disableWhiteText"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/members"
                android:gravity="center">

            </TextView>

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@color/disableWhiteText" />

            <TextView
                android:id="@+id/commentsTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_button"
                android:textColor="@color/disableWhiteText"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/comments"
                android:gravity="center">

            </TextView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"/>

    </android.support.design.widget.CoordinatorLayout>

</layout>
