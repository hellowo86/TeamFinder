<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/memberRecyclerView"
                    android:layout_margin="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin">

                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        style="@style/TitleText"
                        android:text="@string/info"/>

                    <TextView
                        android:id="@+id/contentsText"
                        android:layout_margin="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TitleText"
                        android:textColor="@color/secondaryText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin">

                    <TextView
                        android:background="@color/colorPrimary"
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        style="@style/TitleText"
                        android:text="@string/comments"/>

                    <TextView
                        android:id="@+id/enterCommentBtn"
                        android:background="@drawable/ripple_button"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_button_height"
                        style="@style/TitleText"
                        android:gravity="center_vertical"
                        android:text="@string/enter_comment"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/backgroundDark"/>

                    <android.support.v7.widget.RecyclerView
                        android:background="@color/white"
                        android:id="@+id/commentRecyclerView"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:layout_marginBottom="80dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/default_profile"/>

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/primaryText"
                        style="@style/NormalText"
                        android:textSize="14dp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_menu_bar_height"
            android:background="@color/backgroundAlpha">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ripple_circle_button"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back_black_48dp"
                android:tint="@color/primaryText" />

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"/>

    </android.support.design.widget.CoordinatorLayout>

</layout>
